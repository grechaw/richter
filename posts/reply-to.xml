<post>
    <turtle><![CDATA[
        :replyTo a meta:Post ;
          dc:title "Reply-To Template" ;
          meta:handle "Charles" ;
          dc:issued "2013-10-03"^^xs:date .
        ]]></turtle>
    <html xmlns="http://www.w3.org/1999/xhtml">
        <h1>New Reply</h1>
        <form method="POST" action="/new-post.xqy">
            <label for="handle">Reply-to</label>
            <input type="text" id="reply-to" name="reply-to"/>
            <label for="handle">Handle</label>
            <input type="text" id="handle" name="handle" />
            <label for="title">Title</label>
            <input type="text" id="title" name="title"/>
            <label for="postbody">Regular Textarea</label>
            <textarea id="postbody" name="postbody"></textarea>
            <br class="clear"/>
            <button type="submit">Submit Form</button>
        </form>
    </html>
